{
  "name": "school_management_backend",
  "version": "1.0.0",
  "description": "school management system",
  "main": "index.js",
  "scripts": {
    "build": "yarn rimraf dist && tsc",
    "watch": "yarn rimraf dist && tsc -w",
    "start": "node dist/src/index.js",
    "dev": "nodemon dist/src/index.js",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "fix": "eslint ./src --ext .ts --fix",
    "prepare": "husky install",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check '**/*.{ts,tsx,js,jsx}' --ignore-path .prettierignore",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "format": "prettier --write '**/*.{ts,tsx,js}'",
    "test-all": "yarn run check-types && yarn run check-lint && yarn run build",
    "generate-migration": "yarn build && npx typeorm-ts-node-esm migration:generate src/migrations/migration -d src/constants/data-source.ts",
    "run-migrations": "yarn build && npx typeorm-ts-node-esm migration:run -d src/constants/data-source.ts",
    "revert-migrations": "yarn build && npx typeorm-ts-node-esm migration:revert -d src/constants/data-source.ts",
    "seed:config": "yarn build && ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "yarn build && ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "clear:dev": "yarn build && npx typeorm-ts-node-esm schema:drop -d src/constants/data-source.ts && npx typeorm-ts-node-esm migration:run -d src/constants/data-source.ts && ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "test": "jest  --runInBand  --testTimeout=10000 --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "school management system"
  },
  "author": "orjinuel",
  "license": "ISC",
  "devDependencies": {
    "@jest/test-sequencer": "^28.1.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-handlebars": "^6.0.0",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^28.1.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.18",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.7.0",
    "tsconfig.json": "^1.0.11",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@faker-js/faker": "^7.2.0",
    "argon2": "^0.28.5",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "express-handlebars": "^6.0.6",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.8.0",
    "prettier-eslint": "^15.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "swagger-ui-express": "^4.4.0",
    "ts-migrate": "^0.1.29",
    "typeorm": "^0.3.10",
    "typeorm-seeding": "^1.6.1",
    "uuid": "^9.0.0",
    "zod": "^3.16.0"
  }
}
